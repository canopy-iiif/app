{
  "name": "@canopy-iiif/app",
  "version": "1.6.8",
  "private": false,
  "license": "MIT",
  "author": "Mat Jordan <mat@northwestern.edu>",
  "homepage": "https://canopy-iiif.github.io/app/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/canopy-iiif/app.git",
    "directory": "packages/app"
  },
  "type": "commonjs",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./ui": "./ui/dist/index.mjs",
    "./ui/server": "./ui/dist/server.mjs",
    "./ui/styles/index.css": "./ui/styles/index.css",
    "./ui/styles/runtime.css": "./ui/styles/runtime.css",
    "./ui/canopy-iiif-plugin": "./ui/tailwind-canopy-iiif-plugin.js",
    "./ui/canopy-iiif-preset": "./ui/tailwind-canopy-iiif-preset.js",
    "./ui/tailwind-config": {
      "types": "./ui/tailwind-config.d.ts",
      "default": "./ui/tailwind-config.js",
      "require": "./ui/tailwind-config.js"
    },
    "./ui/tailwind-default-config": {
      "default": "./ui/tailwind-default.config.mjs",
      "import": "./ui/tailwind-default.config.mjs",
      "require": "./ui/tailwind-default.config.mjs"
    },
    "./ui/theme": "./ui/theme.js",
    "./lib/components/*": "./lib/components/*",
    "./head": "./lib/head.js",
    "./base-path": {
      "types": "./types/base-path.d.ts",
      "default": "./lib/base-path.js",
      "require": "./lib/base-path.js"
    },
    "./orchestrator": {
      "types": "./types/orchestrator.d.ts",
      "import": "./lib/orchestrator.js",
      "require": "./lib/orchestrator.js",
      "default": "./lib/orchestrator.js"
    },
    "./docs-legacy-compat": "./docs-legacy-compat.mjs"
  },
  "files": [
    "lib/**",
    "ui/dist/**",
    "ui/styles/**",
    "ui/tailwind-canopy-iiif-plugin.js",
    "ui/tailwind-canopy-iiif-preset.js",
    "ui/tailwind-config.js",
    "ui/tailwind-config.d.ts",
    "ui/tailwind-default.config.mjs",
    "ui/theme.js",
    "types/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@iiif/helpers": "^1.4.0",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@radix-ui/colors": "^3.0.0",
    "charm": "^1.0.2",
    "js-yaml": "^4.1.0",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3",
    "mdast-util-from-markdown": "^2.0.2",
    "mdast-util-gfm-footnote": "^2.1.0",
    "mdast-util-to-hast": "^13.2.0",
    "mdast-util-to-string": "^4.0.0",
    "micromark-extension-gfm-footnote": "^2.1.0",
    "hast-util-to-html": "^9.0.5",
    "react-masonry-css": "^1.0.16",
    "remark-gfm": "^4.0.0",
    "sass": "^1.77.0",
    "slugify": "^1.6.6"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0",
    "tailwindcss": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "esbuild": "^0.21.4"
  },
  "scripts": {
    "ui:build": "node ./ui/scripts/build-ui.mjs",
    "ui:watch": "WATCH=1 node ./ui/scripts/build-ui.mjs",
    "prepublishOnly": "npm run ui:build"
  }
}
